{
  "name": "context-engine-mcp-server",
  "version": "1.3.0",
  "description": "Context engine for local developer environments with AST analysis, knowledge graphs, and semantic search",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "tsx --env-file=.env src/index.ts",
    "start:http": "tsx --env-file=.env src/index.ts --transport http",
    "start:dist": "node --env-file=.env --import tsx dist/index.js",
    "prepare": "npm run build",
    "postinstall": "echo 'âœ… Context Engine v1.3.0 installed. Run npm run build to compile.' && npm run build",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "verify": "node --env-file=.env verify-setup.js",
    "index": "tsx --env-file=.env src/index.ts --workspace . --index",
    "inspector": "npx @modelcontextprotocol/inspector tsx --env-file=.env src/index.ts --workspace .",
    "bench": "tsx --env-file=.env scripts/bench.ts",
    "migrate": "tsx scripts/migrate-v1.2-to-v1.3.ts",
    "db:inspect": "sqlite3 .augment-context/vectors.db"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "context-engine",
    "semantic-search"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "@xenova/transformers": "^2.17.2",
    "chokidar": "^3.5.3",
    "cors": "^2.8.5",
    "express": "^5.2.1",
    "minimatch": "^10.1.1",
    "octokit": "^4.0.2",
    "onnxruntime-node": "^1.24.1",
    "p-limit": "^7.2.0",
    "pino": "^9.5.0",
    "tsx": "^4.21.0",
    "web-tree-sitter": "^0.26.3",
    "yaml": "^2.8.2",
    "zod": "^3.24.1"
  },
  "optionalDependencies": {
    "better-sqlite3": "^11.7.0",
    "hnswlib-node": "^3.0.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/chokidar": "^2.1.3",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "@types/supertest": "^6.0.3",
    "jest": "^30.2.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.6",
    "typescript": "^5.3.0"
  }
}
