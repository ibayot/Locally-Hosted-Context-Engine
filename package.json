{
  "name": "context-engine-mcp-server",
  "version": "1.9.0",
  "description": "MCP server implementation for local context engine with planning and execution features",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "tsx --env-file=.env src/index.ts",
    "start:dist": "node --env-file=.env --import tsx dist/index.js",
    "prepare": "npm run build",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "verify": "node --env-file=.env verify-setup.js",
    "index": "tsx --env-file=.env src/index.ts --workspace . --index",
    "inspector": "npx @modelcontextprotocol/inspector tsx --env-file=.env src/index.ts --workspace .",
    "bench": "tsx --env-file=.env scripts/bench.ts"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "context-engine",
    "semantic-search"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "@xenova/transformers": "^2.17.2",
    "chokidar": "^3.5.3",
    "cors": "^2.8.5",
    "express": "^5.2.1",
    "minimatch": "^10.1.1",
    "p-limit": "^7.2.0",
    "tsx": "^4.21.0",
    "web-tree-sitter": "^0.26.3",
    "yaml": "^2.8.2"
  },
  "devDependencies": {
    "@types/chokidar": "^2.1.3",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "@types/supertest": "^6.0.3",
    "jest": "^30.2.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.6",
    "typescript": "^5.3.0"
  }
}